@model Partosazancnc.Models.ViewModels.OverviewViewModel

@using (Html.BeginForm("overviewsave","Home",FormMethod.Post,new{id="overviewform",enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model=>Model.Logo)
    @Html.HiddenFor(Model=>Model.fivicon)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-8">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SiteName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SiteName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SiteName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SiteDiscription, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SiteDiscription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SiteDiscription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SiteKeyWord, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SiteKeyWord, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SiteKeyWord, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel">
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = " col-md-12" })
                            <div class="col-md-10">
                                <figure class="margin-bottom-10 "><!-- image -->
                                    <img class="img-responsive thumbnail center-block pull-right" src="/img/@Model.Logo" alt="" id="logosrc">
                                </figure>
                                <input type="file" name="logo" id="logoinput"/>
                                @Html.ValidationMessageFor(model => model.Logo, "", new {@class = "text-danger"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.fivicon, htmlAttributes: new { @class = "col-md-12" })
                            <div class="col-md-10">
                                <figure class="margin-bottom-10 "><!-- image -->
                                    <img class="img-responsive thumbnail center-block pull-right" src="/img/@Model.fivicon" alt="" id="facsrc">
                                </figure>
                                <input type="file" name="fivicon" id="fiviconinput"/>
                                @Html.ValidationMessageFor(model => model.fivicon, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        
        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="ثبت " class="btn btn-success" />
            </div>
        </div>
    </div>
}

<script>
    function readURLlogo(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#logosrc').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#logoinput").change(function () {
        readURLlogo(this);
    });

  
</script>
<script>
    function readURLfav(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#facsrc').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#fiviconinput").change(function () {
        readURLfav(this);
    });
</script>