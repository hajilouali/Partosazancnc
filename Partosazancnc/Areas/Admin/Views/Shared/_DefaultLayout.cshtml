
@{
    Layout = null;
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="" />
    <meta name="Author" content="Dorin Grigoras [www.stepofweb.com]" />

    <!-- mobile settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />

    <!-- WEB FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800&amp;subset=latin,latin-ext,cyrillic,cyrillic-ext" rel="stylesheet" type="text/css" />

    <!-- CORE CSS -->
    <link href="/Areas/Admin/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!-- THEME CSS -->
    <link href="/Areas/Admin/assets/css/essentials.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/Admin/assets/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/Admin/assets/css/color_scheme/green.css" rel="stylesheet" type="text/css" id="color_scheme" />
    <link href="/Areas/Admin/assets/plugins/bootstrap/RTL/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/Admin/assets/plugins/bootstrap/RTL/bootstrap-flipped.min.css" rel="stylesheet" type="text/css" />
    <link href="/Areas/Admin/assets/css/layout-RTL.css" rel="stylesheet" type="text/css" />
    <!--Custom Css-->
    @RenderSection("Css", false)
</head>
<!--
    .boxed = boxed version
-->
<body>


    <!-- WRAPPER -->
    <div id="wrapper">

        <!--
            ASIDE
            Keep it outside of #wrapper (responsive purpose)
        -->
        @Html.Action("siderBar","Home",new{Area="Admin"})
        <!-- /ASIDE -->
        <!-- HEADER -->
        <header id="header">

            <!-- Mobile Button -->
            <button id="mobileMenuBtn"></button>

            <!-- Logo -->
            <span class="logo pull-left">
                <img src="/Areas/Admin/assets/images/logo_light.png" alt="admin panel" height="35" />
            </span>



            <nav>

                <!-- OPTIONS LIST -->
                <ul class="nav pull-right">

                    <!-- USER OPTIONS -->
                    @Html.Partial("_UserOptions")
                    <!-- /USER OPTIONS -->

                </ul>
                <!-- /OPTIONS LIST -->

            </nav>

        </header>
        <!-- /HEADER -->
        <!--
            MIDDLE
        -->
        <section id="middle">


            <!-- page title -->
            <header id="page-header">
                <h1>@ViewBag.Title</h1>
                <ol class="breadcrumb">
                    <li><a href="/Admin/">داشبورد</a></li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </header>
            <!-- /page title -->


            <div id="content" class="padding-20">

                @RenderBody()
            </div>
        </section>
        <!-- /MIDDLE -->

    </div>




    <!-- JAVASCRIPT FILES -->
    <script type="text/javascript">var plugin_path = '/Areas/Admin/assets/plugins/';</script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="/Areas/Admin/assets/js/app.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!--Custom Script-->
    @RenderSection("Scripts", false)
</body>
</html>